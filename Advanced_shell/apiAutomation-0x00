#!/bin/bash

# Define the API endpoint and output files
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the API request and save the response
curl -s "$API_URL" -o "$OUTPUT_FILE"

# Check the exit status of the curl command
if [ $? -eq 0 ]; then
    echo "API request successful. Data saved to $OUTPUT_FILE."
    # The sample output uses jq to pretty-print, so we'll add that for demonstration
    echo "Sample output:"
    jq . < "$OUTPUT_FILE" | head -n 50
else
    # Log the error with a timestamp and the URL
    echo "$(date): Error: Failed to retrieve data from $API_URL" >> "$ERROR_FILE"
    echo "API request failed. Error logged to $ERROR_FILE."
fi
